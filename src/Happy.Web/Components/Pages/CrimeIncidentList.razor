@page "/Crime"
@using Happy.ViewModels
@using Microsoft.AspNetCore.Components.QuickGrid
@using Happy.EFCore.Models
@using Happy.Services.Interfaces

@rendermode InteractiveServer

@inject ISafetyService SafetyService

<PageTitle>Incidents</PageTitle>

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="mb-0">Neighborhood Crime Incidents</h5>
        <label>
            The following data is based on the SFPD incident report for the year 2023. Source:
            <a href="https://data.sfgov.org/Public-Safety/Police-Department-Incident-Reports-2018-to-Present/wg3w-h783/data_preview" target="_blank">data.sfgov.org</a>
        </label>
    </div>
    <div class="card-body">
        @if (incidents == null)
        {
            <p class="placeholder-glow">
                <span class="placeholder col-12"></span>
            </p>
        }
        else
        {
            <div class="grid table-responsive">
                <QuickGrid @ref="grid" Items="@incidentGrid" Pagination="@pagination" Class="table table-hover">
                    <PropertyColumn Property="@(p => p.NeighborhoodName)" Title="Neighborhood" Sortable="true">
                        <ColumnOptions>
                            <div class="search-box">
                                <input type="search" autofocus @bind="nameFilter" @bind:event="oninput" placeholder="Neighborhood name..." />
                            </div>
                        </ColumnOptions>
                    </PropertyColumn>
                    <PropertyColumn Property="@(p => p.CrimeIncident)" Title="Incident Count" Format="N0" Align="Align.Center" Sortable="true" />
                </QuickGrid>
            </div>
            <Paginator State="@pagination" />
        }

    </div>
</div>

@code {
    private IEnumerable<NeighborhoodViewModel> incidents = null!;

    private QuickGrid<NeighborhoodViewModel>? grid;
    private PaginationState pagination = new() { ItemsPerPage = 10 };
    string nameFilter;
    IQueryable<NeighborhoodViewModel> incidentGrid
    {
        get
        {
            var result = incidents.AsQueryable();

            if (!string.IsNullOrEmpty(nameFilter))
            {
                result = result.Where(c => c.NeighborhoodName.Contains(nameFilter, StringComparison.CurrentCultureIgnoreCase));
            }

            return result;
        }
    }
    protected override async Task OnInitializedAsync()
    {
        incidents = await SafetyService.GetAllAsync();
    }


}
