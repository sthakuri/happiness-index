@page "/Transportation"
@using Happy.ViewModels
@using Microsoft.AspNetCore.Components.QuickGrid
@using Happy.EFCore.Models
@using Happy.Services.Interfaces

@rendermode InteractiveServer

@inject ITransportationService TransportationService

<PageTitle>Transportation</PageTitle>

<div class="card shadow-sm">
    <div class="card-header">
        <h5 class="mb-0">Neighborhood Commute & Transportation</h5>
        <label>
            The following data is based on Muni Stops. Source:
            <a href="https://data.sfgov.org/Transportation/Muni-Stops/i28k-bkz6/data_preview" target="_blank">data.sfgov.gov</a>
        </label>
    </div>
    <div class="card-body">
        @if (muniStops == null)
        {
            <p class="placeholder-glow">
                <span class="placeholder col-12"></span>
            </p>
        }
        else
        {
            <div class="grid table-responsive">
                <QuickGrid @ref="grid" Items="@muniStopGrid" Pagination="@pagination" Class="table table-hover">
                    <PropertyColumn Property="@(p => p.NeighborhoodName)" Title="Neighborhood" Sortable="true">
                        <ColumnOptions>
                            <div class="search-box">
                                <input type="search" autofocus @bind="nameFilter" @bind:event="oninput" placeholder="Neighborhood name..." />
                            </div>
                        </ColumnOptions>
                    </PropertyColumn>
                    <PropertyColumn Property="@(p => p.MuniStops)" Title="Muni Stops" Format="N0" Align="Align.Center" Sortable="true" />
                </QuickGrid>
            </div>
            <Paginator State="@pagination" />
        }
        
    </div>
</div>

@code {
    private IEnumerable<NeighborhoodViewModel> muniStops = null!;

    private QuickGrid<NeighborhoodViewModel>? grid;
    private PaginationState pagination = new() { ItemsPerPage = 10 };
    string nameFilter;
    IQueryable<NeighborhoodViewModel> muniStopGrid
    {
        get
        {
            var result = muniStops.AsQueryable();

            if (!string.IsNullOrEmpty(nameFilter))
            {
                result = result.Where(c => c.NeighborhoodName.Contains(nameFilter, StringComparison.CurrentCultureIgnoreCase));
            }

            return result;
        }
    }
    protected override async Task OnInitializedAsync()
    {
        muniStops = await TransportationService.GetAllAsync();
    }

    
}
